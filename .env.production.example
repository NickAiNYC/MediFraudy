# ============================================
# MEDIFRAUDY PRODUCTION ENVIRONMENT VARIABLES
# ============================================
# Copy to .env and fill in actual values
# NEVER commit .env to git

# --- Railway Managed (Auto-Injected) ---
DATABASE_URL=postgresql://user:password@host:5432/medifraudy
REDIS_URL=redis://default:password@host:6379
PORT=3000
RAILWAY_ENVIRONMENT=production

# --- Security (REQUIRED) ---
SECRET_KEY=
JWT_SECRET_KEY=
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption for PHI data (HIPAA requirement)
ENCRYPTION_KEY=

# --- API Keys ---
DEEPSEEK_API_KEY=sk-your-deepseek-key-here

# --- CORS (Production Domain) ---
CORS_ORIGINS=https://medifraudy.com,https://app.medifraudy.com
CORS_ALLOW_CREDENTIALS=true

# --- Monitoring & Logging ---
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true

# --- Rate Limiting ---
RATE_LIMIT_ENABLED=true
RATE_LIMIT_STORAGE_URL=$REDIS_URL
RATE_LIMIT_DEFAULT=100/hour

# --- Database ---
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# --- Caching ---
CACHE_TTL_RISK_SCORE=3600
CACHE_TTL_PROVIDER_PROFILE=14400
CACHE_TTL_PEER_BASELINE=86400

# --- Features ---
ENABLE_BACKGROUND_JOBS=true
ENABLE_EVIDENCE_SIGNING=true
ENABLE_AUDIT_LOGGING=true

# --- Session Management ---
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# --- File Upload ---
MAX_UPLOAD_SIZE_MB=50
ALLOWED_UPLOAD_EXTENSIONS=pdf,docx,xlsx,csv,png,jpg

# --- Evidence Package ---
EVIDENCE_SIGNATURE_ALGORITHM=SHA-256
EVIDENCE_EXPORT_FORMAT=pdf

# --- Email (Optional - for alerts) ---
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=alerts@medifraudy.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=MediFraudy Alerts <alerts@medifraudy.com>

# --- External APIs (Optional) ---
PACER_API_KEY=your-pacer-key
CMS_API_KEY=your-cms-key
